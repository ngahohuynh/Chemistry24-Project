<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chemistry_molecule_land"
    android:backgroundTint="@color/colorPrimaryLight"
    android:backgroundTintMode="screen"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/home_logo_width_land"
        android:layout_height="@dimen/home_logo_height"
        android:layout_marginLeft="@dimen/home_logo_margin"
        android:layout_marginRight="@dimen/home_logo_margin"
        android:layout_marginTop="@dimen/home_logo_margin"
        android:src="@drawable/pngtree"/>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/typographica"
        android:layout_marginLeft="@dimen/home_app_margin"
        android:layout_marginRight="@dimen/home_app_margin"
        android:gravity="center_horizontal"
        android:text="@string/chemistry_24"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/home_app_text_size"
        android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:id="@+id/btnTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_button_margin"
        android:layout_marginRight="@dimen/home_button_margin"
        android:layout_marginTop="@dimen/home_topic_button_top"
        android:background="@drawable/rounded_button"
        android:text="@string/btn_topic"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        android:onClick="goToTopic"/>

    <Button
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_button_margin"
        android:layout_marginRight="@dimen/home_button_margin"
        android:layout_marginTop="@dimen/home_button_top"
        android:background="@drawable/rounded_button"
        android:text="@string/btn_test"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        android:onClick="goToTest"/>

    <Button
        android:id="@+id/btnSpeedTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_button_margin"
        android:layout_marginRight="@dimen/home_button_margin"
        android:layout_marginTop="@dimen/home_button_top"
        android:background="@drawable/rounded_button"
        android:text="@string/btn_speed_test"
        android:textColor="@color/white"
        android:textSize="@dimen/button_text_size"
        android:onClick="goToSpeedTest"/>

    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="@dimen/home_extra_button_size"
        android:layout_height="@dimen/home_extra_button_size"
        android:background="@drawable/info_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="showInfo"/>

    <Button
        android:id="@+id/btnLanguage"
        android:layout_width="@dimen/home_extra_button_size"
        android:layout_height="@dimen/home_extra_button_size"
        android:background="@drawable/language_button"
        android:layout_toLeftOf="@+id/btnInfo"
        android:layout_alignParentBottom="true"
        android:onClick="showSelectLanguage"/>

    <Button
        android:layout_width="@dimen/home_extra_button_size"
        android:layout_height="@dimen/home_extra_button_size"
        android:background="@drawable/report_button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/btnLanguage"
        android:onClick="sendFeedback"/>

</RelativeLayout>